#!/usr/bin/env python

import sys
from StringIO import StringIO
from testify import *

@test
def okTrue():
  expect(1)

  stdout = StringIO()
  sys.stdout = stdout

  test(lambda: ok(True))

  sys.stdout = sys.__stdout__

  equal('''ok 1
''', stdout.getvalue())

@test
def okFalse():
  expect(1)

  stdout = StringIO()
  sys.stdout = stdout

  test(lambda: ok(True))

  sys.stdout = sys.__stdout__

  equal('''not ok 1
''', stdout.getvalue())
